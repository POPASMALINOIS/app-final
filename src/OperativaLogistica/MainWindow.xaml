<Window x:Class="OperativaLogistica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:OperativaLogistica.ViewModels"
        Title="Operativa Logística"
        Height="720" Width="1200"
        WindowStartupLocation="CenterScreen">

    <!-- DataContext con el ViewModel basado en CommunityToolkit.Mvvm -->
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <DockPanel>
        <!-- Menú principal -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Archivo">
                <!-- ✅ NUEVA OPCIÓN: borra las entradas del día seleccionado -->
                <MenuItem Header="_Nueva jornada (en blanco)"
                          Command="{Binding NewDayCommand}"/>

                <Separator/>
                <!-- Puedes añadir aquí otras opciones cuando tengas comandos (Importar, Guardar PDF, etc.) -->

                <MenuItem Header="Salir" Click="Exit_Click"/>
            </MenuItem>

            <MenuItem Header="_Ayuda">
                <MenuItem Header="Acerca de" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <!-- Barra superior con fecha (el VM usa SelectedDate) -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="6">
            <Label Content="Fecha:" VerticalAlignment="Center"/>
            <DatePicker SelectedDate="{Binding SelectedDate, Mode=TwoWay}" />
        </StackPanel>

        <!-- Tabla de operaciones (se pobla con Load()) -->
        <DataGrid ItemsSource="{Binding Operaciones}"
                  Margin="6"
                  IsReadOnly="False"
                  EnableRowVirtualization="True"
                  EnableColumnVirtualization="True"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.CanContentScroll="True"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  AutoGenerateColumns="False">

            <DataGrid.Columns>
                <DataGridTextColumn Header="TRANSPORTISTA" Binding="{Binding Transportista}" Width="220">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="ToolTip" Value="{Binding Transportista}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="MATRICULA" Binding="{Binding Matricula}" Width="120"/>
                <DataGridTextColumn Header="MUELLE" Binding="{Binding Muelle}" Width="80"/>
                <DataGridTextColumn Header="ESTADO" Binding="{Binding Estado}" Width="120"/>

                <DataGridTextColumn Header="DESTINO" Binding="{Binding Destino}" Width="220">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="ToolTip" Value="{Binding Destino}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="LLEGADA" Binding="{Binding Llegada}" Width="80"/>
                <DataGridTextColumn Header="LLEGADA REAL" Binding="{Binding LlegadaReal}" Width="100"/>
                <DataGridTextColumn Header="SALIDA REAL" Binding="{Binding SalidaReal}" Width="100"/>
                <DataGridTextColumn Header="SALIDA TOPE" Binding="{Binding SalidaTope}" Width="100"/>

                <DataGridTextColumn Header="OBSERVACIONES" Binding="{Binding Observaciones}" Width="260">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="ToolTip" Value="{Binding Observaciones}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="INCIDENCIAS" Binding="{Binding Incidencias}" Width="220">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="ToolTip" Value="{Binding Incidencias}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
