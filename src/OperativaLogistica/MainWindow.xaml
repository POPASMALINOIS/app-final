<Window x:Class="OperativaLogistica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:OperativaLogistica.ViewModels"
        mc:Ignorable="d"
        Title="Operativa Logística" Height="900" Width="1600">

    <DockPanel>

        <!-- Barra superior -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="#EEE" Padding="8">
            <TextBlock Text="Fecha:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <DatePicker SelectedDate="{Binding FechaActual}" Width="140" Margin="0,0,12,0"/>

            <TextBlock Text="Buscar:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <TextBox Text="{Binding Filtro, UpdateSourceTrigger=PropertyChanged}" Width="200" Margin="0,0,12,0"/>

            <TextBlock Text="Lado:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <ComboBox Width="120"
                      ItemsSource="{x:Static vm:TabLadosProvider.Items}"
                      SelectedItem="{Binding LadoSeleccionado}" Margin="0,0,12,0"/>
        </StackPanel>

        <!-- Tabs (varias jornadas en paralelo) -->
        <TabControl ItemsSource="{Binding Sesiones}" SelectedItem="{Binding SesionActual}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding NombrePestana}" />
                </DataTemplate>
            </TabControl.ItemTemplate>

            <TabControl.ContentTemplate>
                <DataTemplate>
                    <DataGrid x:Name="GridOps"
                              ItemsSource="{Binding Operaciones}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="True"
                              CanUserResizeColumns="True"
                              HeadersVisibility="All"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              DockPanel.Dock="Top">

                        <DataGrid.Columns>

                            <!-- TRANSPORTISTA -->
                            <DataGridTextColumn Header="TRANSPORTISTA" Binding="{Binding Transportista}" Width="200"/>

                            <!-- MATRICULA -->
                            <DataGridTextColumn Header="MATRICULA" Binding="{Binding Matricula}" Width="120"/>

                            <!-- MUELLE -->
                            <DataGridTextColumn Header="MUELLE" Binding="{Binding Muelle}" Width="100"/>

                            <!-- ESTADO (desplegable) -->
                            <DataGridComboBoxColumn Header="ESTADO"
                                                    SelectedItemBinding="{Binding Estado, Mode=TwoWay}"
                                                    Width="150"
                                                    ItemsSource="{Binding Source={x:Static vm:EstadosProvider.Items}}"/>

                            <!-- DESTINO -->
                            <DataGridTextColumn Header="DESTINO" Binding="{Binding Destino}" Width="200"/>

                            <!-- LLEGADA -->
                            <DataGridTextColumn Header="LLEGADA" Binding="{Binding Llegada}" Width="100"/>

                            <!-- LLEGADA REAL -->
                            <DataGridTemplateColumn Header="LLEGADA REAL" Width="160">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding LlegadaReal}" Width="70" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                            <Button Content="⏱" Width="32"
                                                    Command="{Binding DataContext.MarkLlegadaCommand, ElementName=GridOps}"
                                                    CommandParameter="{Binding .}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- SALIDA REAL -->
                            <DataGridTemplateColumn Header="SALIDA REAL" Width="160">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding SalidaReal}" Width="70" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                            <Button Content="⏱" Width="32"
                                                    Command="{Binding DataContext.MarkSalidaCommand, ElementName=GridOps}"
                                                    CommandParameter="{Binding .}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- SALIDA TOPE -->
                            <DataGridTextColumn Header="SALIDA TOPE" Binding="{Binding SalidaTope}" Width="100"/>

                            <!-- OBSERVACIONES -->
                            <DataGridTextColumn Header="OBSERVACIONES" Binding="{Binding Observaciones}" Width="220"/>

                            <!-- INCIDENCIAS (corregida con opción "SIN INCIDENCIAS") -->
                            <DataGridTemplateColumn Header="INCIDENCIAS" Width="220">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox Padding="0"
                                                  SelectedValue="{Binding Incidencias, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  SelectedValuePath="Content">
                                            <ComboBox.Items>
                                                <!-- Opción para limpiar (cadena vacía) -->
                                                <ComboBoxItem Content="">
                                                    <ComboBoxItem.Template>
                                                        <ControlTemplate TargetType="ComboBoxItem">
                                                            <TextBlock Text="SIN INCIDENCIAS" Foreground="Gray"/>
                                                        </ControlTemplate>
                                                    </ComboBoxItem.Template>
                                                </ComboBoxItem>

                                                <!-- Resto de opciones -->
                                                <ComboBoxItem Content="RETRASO TRANSPORTISTA"/>
                                                <ComboBoxItem Content="RETRASO DOCUMENTACION"/>
                                                <ComboBoxItem Content="INCIDENCIA REMOLQUE"/>
                                                <ComboBoxItem Content="ANULADO"/>
                                            </ComboBox.Items>
                                        </ComboBox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- PRECINTO -->
                            <DataGridTextColumn Header="PRECINTO" Binding="{Binding Precinto}" Width="120"/>

                            <!-- LEX -->
                            <DataGridCheckBoxColumn Header="LEX" Binding="{Binding Lex}" Width="60"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </DockPanel>
</Window>
