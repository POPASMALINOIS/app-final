<Window x:Class="OperativaLogistica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:OperativaLogistica.ViewModels"
        Title="Operativa Logística"
        Height="720" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <DockPanel>
        <!-- Menú -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Archivo">
                <MenuItem Header="_Nueva jornada (en blanco)" Command="{Binding NewDayCommand}"/>
                <Separator/>
                <MenuItem Header="_Importar..." Command="{Binding ImportCommand}"/>
                <Separator/>
                <MenuItem Header="_Guardar jornada (PDF)" Command="{Binding SaveDayCommand}"/>
                <Separator/>
                <MenuItem Header="Salir" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_Ver">
                <MenuItem Header="Hoy" Click="Today_Click"/>
            </MenuItem>
            <MenuItem Header="_Ayuda">
                <MenuItem Header="Acerca de" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <!-- Barra superior -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="6">
            <Label Content="Fecha:" VerticalAlignment="Center"/>
            <DatePicker SelectedDate="{Binding SelectedDate, Mode=TwoWay}" />
            <Label Content="Buscar:" VerticalAlignment="Center" Margin="12,0,0,0"/>
            <TextBox Width="280" Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- Tabla -->
        <DataGrid ItemsSource="{Binding View}"
                  Margin="6"
                  AutoGenerateColumns="False"
                  IsReadOnly="False"
                  EnableRowVirtualization="True"
                  EnableColumnVirtualization="True"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.CanContentScroll="True"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal">

            <DataGrid.Columns>
                <!-- TRANSPORTISTA (larga) -->
                <DataGridTextColumn Header="TRANSPORTISTA" Binding="{Binding Transportista}" Width="220">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="ToolTip" Value="{Binding Transportista}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="MATRICULA" Binding="{Binding Matricula}" Width="120"/>
                <DataGridTextColumn Header="MUELLE" Binding="{Binding Muelle}" Width="80"/>
                <DataGridTextColumn Header="ESTADO" Binding="{Binding Estado}" Width="120"/>

                <!-- DESTINO (larga) -->
                <DataGridTextColumn Header="DESTINO" Binding="{Binding Destino}" Width="220">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="ToolTip" Value="{Binding Destino}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="LLEGADA" Binding="{Binding Llegada}" Width="80"/>

                <!-- LLEGADA REAL con botón -->
                <DataGridTemplateColumn Header="LLEGADA REAL" Width="170">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding LlegadaReal}" Width="80" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                <Button Content="⏱ Llegada"
                                        Command="{Binding DataContext.MarkLlegadaCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- SALIDA REAL con botón -->
                <DataGridTemplateColumn Header="SALIDA REAL" Width="170">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding SalidaReal}" Width="80" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                <Button Content="⏱ Salida"
                                        Command="{Binding DataContext.MarkSalidaCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="SALIDA TOPE" Binding="{Binding SalidaTope}" Width="90"/>

                <!-- OBSERVACIONES (larga) -->
                <DataGridTextColumn Header="OBSERVACIONES" Binding="{Binding Observaciones}" Width="260">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="ToolTip" Value="{Binding Observaciones}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- INCIDENCIAS (larga) -->
                <DataGridTextColumn Header="INCIDENCIAS" Binding="{Binding Incidencias}" Width="220">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="ToolTip" Value="{Binding Incidencias}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
